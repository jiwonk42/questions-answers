{{#if addNewQuestion}}
  <h1>New Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Question: </label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="detail">Detail: </label>
        {{input value=detail id="detail"}}
      </div>

      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
