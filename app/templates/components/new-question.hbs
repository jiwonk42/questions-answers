{{#if addNewQuestion}}
<h3>New Question</h3>
<br>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Question: </label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="detail">Detail: </label>
        {{input value=detail id="detail"}}
      </div>
      <br>
      <button class="btn btn-info" {{action 'saveQuestion'}}>Post</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info" {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
