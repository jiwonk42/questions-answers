<br>
{{#if updateQuestionForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title: </label>
        {{input value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="detail">Detail: </label>
        {{input value=detail id="detail" placeholder=question.detail}}
      </div>
      <br>
      <button class="btn btn-info" {{action 'update' question}}>Update</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning" {{action 'updateQuestionForm'}}>Update This Question</button>
{{/if}}
