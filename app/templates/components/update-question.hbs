{{#if updateQuestionForm}}
  <h4>Update {{question.title}} by {{question.author}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title: </label>
        {{input value=title id="title" placeholder=question.title}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="detail">Detail: </label>
        {{input value=detail id="detail" placeholder=question.detail}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
